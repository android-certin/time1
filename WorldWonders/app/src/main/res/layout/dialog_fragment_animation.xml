<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/suitcase"
        android:background="@drawable/animatios_suitcase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.2"
        />

    <ImageView
        android:id="@+id/eiffel_tower"
        android:background="@drawable/animatio_eiffel_tower"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.2"
        />

    <ImageView
        android:id="@+id/camera"
        android:background="@drawable/animatio_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.2"
        />

    <ImageView
        android:background="@drawable/animatio_pyramids"
        android:id="@+id/pyramids"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.2"
        />

    <ImageView
        android:background="@drawable/animatio_taj_mahal"
        android:id="@+id/taj_mahal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.2"
        />

</LinearLayout>